<Page x:Class="fluentregman_wpf.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fluentregman_wpf"
      mc:Ignorable="d" 
      MinHeight="500" MinWidth="500"
      
      d:DesignHeight="500" d:DesignWidth="500"
      Title="Добро пожаловать Платная Поликлиника">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>


        </Grid.RowDefinitions>

        <Label Content="Администрирование" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="36" />
        <Label Content="Автаматазация Платной Поликлиники&#xD;&#xA;Довляша Гемана Алексеевича ПО309" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCFFFFFF" FontSize="24" />
        <TextBox Grid.Row="2" Text="Логин" Background="#FF31303B" MinHeight="50" BorderBrush="#7FFFFFFF" Foreground="White"/>
        <TextBox Grid.Row="3" Text="Пароль" Background="#FF31303B"  MinHeight="50" BorderBrush="#7FFFFFFF" Foreground="White"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,4,0,0" Grid.Row="4" VerticalAlignment="Center" MinWidth="400" MinHeight="60" FontSize="36" Foreground="White" Style="{DynamicResource btn_grad2}" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="1,0">
                    <GradientStop Color="#FFE53B" Offset="0"/>
                    <GradientStop Color="#FC007A" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>


    </Grid>
</Page>
