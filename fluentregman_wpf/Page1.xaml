<Page x:Class="fluentregman_wpf.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fluentregman_wpf"
      mc:Ignorable="d" 
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"

      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page1">

    <Grid Margin="3" fw:PointerTracker.Enabled="True">
        <StackPanel>
            <Button Content="Button" HorizontalAlignment="Left" Margin="5" Width="75" Height="32"
                Style="{StaticResource ButtonRevealStyle}"/>

            <Button Content="Button" HorizontalAlignment="Left" Margin="5" Width="75" Height="32"
                Background="Transparent"
                Style="{StaticResource ButtonRevealStyle}"/>
            <TextBox HorizontalAlignment="Left" Height="35" Margin="5,5,0,5" Text="TextBox" Width="187"
             Style="{StaticResource TextBoxRevealStyle}"/>
        </StackPanel>
    </Grid>
</Page>
